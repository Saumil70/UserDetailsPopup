@model Employee

<div class="card shadow border-0 mt-3  pb-3">
    <div class="card-header bg-secondary bg-gradient m-lg-1 py-3 ">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> User Manager</h2>
            </div>
        </div>
    </div>
    <div class=" card-body   p-5">

        <div class=" row">
            <div class=" col-12 text-end pb-3">
                <input type="text" id="searchInput" placeholder="Search...">
                <button class=" btn btn-dark" id="btnAdd">
                    <i class="bi bi-patch-plus"></i> Create New User
                </button>
            </div>
        </div>
        <div class=" container-fluid">
            <table id="tblDB" class=" table table-hover table-bordered px-5 " style="width:100%">
                <thead>
                    <tr>
                        <th>
                             Name
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                        <div class="form-group pb-3">
                            <div class="form-group pb-3">
                                <label>Select Gender</label>
                                <select class="form-control" id="gender-dropdown"></select>
                            </div>
                        </div>
                        </th>
                        <th>
                            <div class="form-group pb-3">
                                <div class="form-group pb-3">
                                    <label>Select Hobby</label>
                                    <select class="form-control" id="hobbies-dropdown"></select>
                                </div>
                            </div>
                        </th>
                        <th>
                            Department Name
                        </th>
                        <th>
                            Country
                        </th>
                        <th>
                            State
                        </th>
                        <th>
                            City
                        </th>
                        <th>
                            ImageUrl
                        </th>
                        
                        <th></th>
                    </tr>
                </thead>
                <tbody id="tblData"></tbody>
            </table>
            <div class=" modal fade modal" id="userModal">
                <div class=" modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h2 class="text-info modal-title" id="addCity">Add User</h2>
                            <button class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <form method="post" id="employeeForm">
                                <input id="UserId" asp-for="EmployeeId" hidden />
                                <div class="form-group mt-2">
                                    <label>Name</label>
                                    <input type="text" class="form-control" id="Name" required/>
                                </div>
                                <div class="form-group mt-2">
                                    <label>Email</label>
                                    <input type="email" name="Email" class="form-control" id="Email" required/>
                                </div>
                                <div class="form-group mt-2">
                                    <label>Address</label>
                                    <input type="text" name="Address" class="form-control" id="Address" required/>
                                </div>

                                <div id="gender" class="form-group">
                                    <input type="radio" name="gender" value="hidden" id="hidden-radio" style="display: none;" checked/>
                                    <input type="radio" name="gender" value="1" id="male" />
                                    <label for="male">Male</label>
                                    <input type="radio" name="gender" value="2" id="female" />
                                    <label for="female">Female</label>
                                </div>

                                <div class="form-group mt-2" id="createHobbies">
                                    <label>Hobbies &nbsp;</label>
                                </div>


                                <div class="form-group pb-3">
                                    <div class="form-group pb-3">
                                        <label>Select Department</label>
                                        <select class="form-control" id="department" name="department" required></select>
                                    </div>
                                </div>
                                <div class="form-group pb-3">
                                    <div class="form-group pb-3">
                                        <label>Select Country</label>
                                        <select class="form-control" id="country" name="country" required></select>
                                    </div>
                                </div>
                                <div class="form-group pb-3">
                                    <div class="form-group pb-3">
                                        <label>Select State</label>
                                        <select class="form-control" id="state" name="state" required ></select>
                                    </div>
                                </div>
                                <div class="form-group pb-3">
                                    <div class="form-group pb-3">
                                        <label>Select City</label>
                                        <select class="form-control" id="city" name="city" required ></select>
                                    </div>
                                </div>
                                <div class="form-group mt-2">
                                    <label>Image</label>
                                    <input type="file" name="file" class="form-control" id="Image" required />
                                    <div id="userImage" class="mt-3"></div>
                                </div>
                                
                            </form>
                        </div>
                        <div class="modal-footer">

                            <button class="btn btn-primary" onclick="AddUser();" id="AddData">Create</button>
                            <button class="btn btn-warning" onclick="UpdateUser();" style="display:none" id="UpdateData">Update</button>

                            <button class="btn btn-danger btn-default" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class=" modal fade modal" id="details">
                <div class=" modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h2 class="text-info modal-title" id="details">Details</h2>
                            <button class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div id="userDetails">
                            <h1>User Details</h1>
                            <div id="userDetailsContent">
                                <!-- User details will be loaded here -->
                            </div>
                            <button class="btn btn-danger btn-default" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script src="~/js/User.js"></script>
}